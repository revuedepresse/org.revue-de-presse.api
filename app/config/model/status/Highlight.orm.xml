<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Status\Entity\Highlight"
            repository-class="App\Status\Repository\HighlightRepository"
            table="highlight">

        <indexes>
            <index name="highlight_idx" columns="status_id,member_id,publication_date_time,total_retweets,total_favorites"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <one-to-one
            field="status"
            target-entity="WeavingTheWeb\Bundle\ApiBundle\Entity\Status">
            <join-column
                name="status_id"
                referenced-column-name="ust_id"
            />
        </one-to-one>

        <many-to-one
            field="member"
            target-entity="WTW\UserBundle\Entity\User">
            <join-column name="member_id" referenced-column-name="usr_id" />
        </many-to-one>

        <field
            name="publicationDateTime"
            column="publication_date_time"
            type="datetime"
        />

        <field
                name="isRetweet"
                column="is_retweet"
                type="boolean"
        />

        <field
            name="totalRetweets"
            column="total_retweets"
            type="integer"
        />

        <field
            name="totalFavorites"
            column="total_favorites"
            type="integer"
        />
    </entity>

</doctrine-mapping>
