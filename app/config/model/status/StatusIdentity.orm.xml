<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Status\Entity\StatusIdentity"
            table="status_identity">

        <indexes>
            <index name="status_idx" columns="member_identity,publication_date_time,twitter_id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="twitter_id" name="twitter"/>
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <many-to-one
            field="memberIdentity"
            target-entity="App\Member\Entity\MemberIdentity"
            inversed-by="statusIdentities"
        >
            <join-column
                name="member_identity"
                referenced-column-name="id"
            />
        </many-to-one>

        <one-to-one
            field="status"
            target-entity="WeavingTheWeb\Bundle\ApiBundle\Entity\Status"
            inversed-by="status_identity"
        >
            <join-column
                name="status"
                referenced-column-name="ust_id"
            />
        </one-to-one>

        <one-to-one
            field="archivedStatus"
            target-entity="WeavingTheWeb\Bundle\ApiBundle\Entity\ArchivedStatus"
            inversed-by="status_identity"
        >
            <join-column
                name="archived_status"
                referenced-column-name="ust_id"
            />
        </one-to-one>

        <field
            name="twitterId"
            column="twitter_id"
            length="190"
        />

        <field
            name="publicationDateTime"
            column="publication_date_time"
            type="datetime"
        />
    </entity>

</doctrine-mapping>
