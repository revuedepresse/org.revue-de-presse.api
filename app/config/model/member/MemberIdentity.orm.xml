<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Member\Entity\MemberIdentity"
            table="member_identity">

        <unique-constraints>
            <unique-constraint columns="member_id,screen_name,twitter_id" name="unique_member"/>
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <one-to-one
            field="member"
            target-entity="WTW\UserBundle\Entity\User"
        >
            <join-column
                name="member_id"
                referenced-column-name="usr_id"
            />
        </one-to-one>

        <one-to-many
            field="statusIdentities"
            target-entity="App\Status\Entity\StatusIdentity"
            mapped-by="member_identity"
        />

        <field
            name="twitterId"
            column="twitter_id"
            length="190"
        />

        <field
            name="screenName"
            column="screen_name"
            type="string"
            length="190"
        />

    </entity>

</doctrine-mapping>
