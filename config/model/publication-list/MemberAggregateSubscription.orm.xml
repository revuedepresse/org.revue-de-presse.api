<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Twitter\Infrastructure\PublishersList\Entity\MemberAggregateSubscription"
            repository-class="App\Twitter\Infrastructure\PublishersList\Repository\MemberAggregateSubscriptionRepository"
            table="member_aggregate_subscription">

        <options>
            <option name="collate">utf8mb4_general_ci</option>
            <option name="charset">utf8mb4</option>
        </options>

        <indexes>
            <index name="member_aggregate_subscription_idx" columns="id,member_id,list_id,list_name" />
            <index name="mas_id_name" columns="list_name" />
        </indexes>

        <unique-constraints>
            <unique-constraint columns="member_id,list_id" name="unique_aggregate_subscription" />
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator" />
        </id>

        <many-to-one
            field="member"
            target-entity="App\Membership\Domain\Entity\Legacy\Member"
        >
            <join-column
                name="member_id"
                referenced-column-name="usr_id"
            />
        </many-to-one>

        <one-to-many
            field="aggregates"
            target-entity="App\Twitter\Infrastructure\Publication\Entity\PublishersList"
            mapped-by="memberAggregateSubscription" />

        <field
            name="listName"
            column="list_name"
            type="string"
            length="255"
        />

        <field
            name="listId"
            column="list_id"
            type="string"
            length="255"
        />

        <field
            name="document"
            column="document"
            type="text"
        />

    </entity>

</doctrine-mapping>
